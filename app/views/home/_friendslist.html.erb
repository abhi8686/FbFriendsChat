<%#= abort @friendsHash.inspect %>
<div class="middle">
	<div class="row">
		<div class="col-lg-12 col-md-12 col-sm-12">
		  	<% if @friendsHash %>
		  		<% cnt = 0 %>
		  		<% @friendsHash.each do |item| %>
		  			<% if cnt==3 %>
		  				</tr>
		  				<tr>
		  				<% cnt = 0 %>
		  			<% end %>
		  			<% @classphoto =  (@alreadyinvitedusers.include? item[0]) ? "fb-invited" : "fb-photo" %>
		          	<div class="col-lg-4 col-md-4 col-sm-4">
		          		<div class="image polaroid">
				        	<%= image_tag "http://graph.facebook.com/#{item[0]}/picture", :class => "float-left #{@classphoto}", :id => item[0] %>
							<div class='desc' id="fb_name_<%= item[0]%>">
								<%= item[1] %>
							</div>
						</div>								
					    <% cnt += 1 %>
				    </div>
		      	<% end %>

		    <% else %>
		    <% abort %>
		    <div class="mess">
		    	<span>No friends found in your account.</span>
		    	<%= link_to 'Click here to invite friends'.html_safe, invite_path %>
		    </div>
		    <% end %>
		</div>
	</div>
</div>

<script type="text/javascript">
  $( document ).ready(function() {

    // var x = document.getElementById("demo");
    getLocation();
    function getLocation() {
    	
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(showPosition);
        } else { 
            x.innerHTML = "Geolocation is not supported by this browser.";
        }
      }

    function showPosition(position) {
    	  //x.innerHTML = "Latitude: " + position.coords.latitude + 
       //"<br>Longitude: " + position.coords.longitude;
        var data = { 'lat': position.coords.latitude, 'lon': position.coords.longitude }; 
        $.ajax({
            type: 'GET', 
            url: '/update_location',
            data: data
        });
      }
  });
  </script>
