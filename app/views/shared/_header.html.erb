<!--header-start-->
<div class="header navbar-fixed-top">
	<div class="row">
		<div class="col-lg-12 col-md-12 col-sm-12">
			<div class="col-lg-4 col-md-4 col-sm-4">
				<%= link_to '<span> <i class="fa fa-5x fa-search"></i></span>'.html_safe, searchlist_path %>
			</div>
			<div class="col-lg-4 col-md-4 col-sm-4">

				<span>
					<%= link_to image_tag("/images/hey1.png",  :class => "heyimg")%>
				</span>
			</div>
			<div class="col-lg-4 col-md-4 col-sm-4">
				<span>
					<% if params[:action] == 'invite_mail' %>
						<%= link_to '<span> <i class="fa fa-5x fa-sign-out"></i></span>'.html_safe, signout_path %>
					<% else %>
						<%= link_to '<span> <i class="fa fa-5x fa-wrench"></i></span>'.html_safe,  invite_mail_path %>
					<% end %>
				</span>
			</div>
		</div>            
	</div>
</div>

<!--header-end-->